{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ninja build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}",
            },
            "command": "call \"C:\\Program Files (x86)\\Microsoft Visual Studio\\2019\\Community\\VC\\Auxiliary\\Build\\vcvars64.bat\" && mkdir vbuild && cd vbuild && cmake -G Ninja .. -DCMAKE_TOOLCHAIN_FILE=C:\\vcpkg\\scripts\\buildsystems\\vcpkg.cmake -DCMAKE_BUILD_TYPE=Debug && cmake --build . --config Debug && mkdir debug",
        },
        {
            "label": "cmake build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}",
            },
            "command": "mkdir vbuild && cd vbuild && cmake -DCMAKE_TOOLCHAIN_FILE=C:\\vcpkg\\scripts\\buildsystems\\vcpkg.cmake -DCMAKE_GENERATOR_PLATFORM=x64 .. && cmake --build . --config Debug && mkdir debug",
        },
        {
            "label": "cmake rebuild",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}",
            },
            "command": "cd vbuild && cmake --build . --config Debug",
        },
        {
            "label": "cmake install",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}\\vbuild",
            },
            "command": "cmake --build . --target install",
        }
    ]
}